<div class="row">
  <h4 class="col-md-2 mx-auto font-weight-bold">ログイン</h4>
</div>
<div class="row">
  <p class="col-md-2 mx-auto font-weight-bold"><span style="background-color:#C0C0C0">会員の⽅はこちらからログイン</span></p>
</div>
<%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>

<div class="row">
<div class="mx-auto">

  <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
   <%= render "customers/shared/error_messages", resource: resource %>
    <table class='table table-borderless'>
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, placeholder: "XXX@XXXX.com", size: "40" %></td>
      </tr>
      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password, size: "40" %></td>
      </tr>
      <tr>
        <td></td>
        <td><%= f.submit "ログイン", class: 'btn btn-primary btn-md' %></td>
      </tr>
    </table>
  <% end %>
  </div>
</div>
<%= render "customers/shared/links" %>
