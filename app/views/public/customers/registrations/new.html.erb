<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>

  <div class="field">
    <p><%= f.label :名前　%>
     （姓）<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    （名）<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %></p>
  </div>

  <div class="field">
    <p><%= f.label :フリガナ　%>
     （セイ）<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    （メイ）<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %></p>
  </div>

  <div class="field">
    <p><%= f.label :メールアドレス　%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></p>
  </div>

  <div class="field">
    <p><%= f.label :郵便番号（ハイフンなし）　%>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></p>
  </div>

  <div class="field">
    <p><%= f.label :住所　%>
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %></p>
  </div>

  <div class="field">
    <p><%= f.label :電話番号（ハイフンなし）　%>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></p>
  </div>


  <div class="field">
    <p><%= f.label :パスワード%>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %></p>
  </div>

  <div class="field">
    <p><%= f.label :パスワード（確認用）　%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %></p>
  </div>

  <div class="actions">
    <p><%= f.submit "新規登録" %></p>
  </div>
<% end %>
<p>既に会員済みの方</p>
<%= render "customers/shared/links" %>
