<table class='table table-hover table-inverse'>
  <thead class="table-list">
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at %>
        </td>
        <td>
          〒<%= order.delivery_postal_code %><br>
          <%= order.delivery_address %><br>
          <%= order.delivery_name %>
        </td>
        <td>
          注文商品
        </td>
        <td>
          <%= order.total_payment %>
        </td>
        <td>
          注文詳細
        </td>
      </tr>
    <% end %>
  </tbody>
</table>