<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><span>LOGO</span></a> 　　<!--後でLOGO画像入れます-->

      <nav>
        <ul class="nav navbar-nav navbar-right ml-auto bg p-4">

        <!-- 会員ログイン時 -->
        <% if customer_signed_in? %>
          <%= render 'layouts/customer_header' %>
        <% if customer_signed_in? %>
          <li style="padding: 10px; margin-bottom: 10px; margin-right: 20px; color: #fff;">
            ようこそ<%= current_customer.last_name %>さん！</li>
          <li style="padding: 10px; margin-bottom: 10px; margin-right: 20px; border: 1px solid #fff; border-radius: 10px;">
            <%= link_to "マイページ", '/customers', class: 'text-light' %></li>
          <li style="padding: 10px; margin-bottom: 10px; margin-right: 20px; border: 1px solid #fff; border-radius: 10px;">
            <%= link_to "商品一覧", products_path, class: 'text-light' %></li>
          <li style="padding: 10px; margin-bottom: 10px; margin-right: 20px; border: 1px solid #fff; border-radius: 10px;">
            <%= link_to "カート", cart_products_path, class: 'text-light' %></li>
          <li style="padding: 10px; margin-bottom: 10px; margin-right: 20px; border: 1px solid #fff; border-radius: 10px;">
            <%= link_to ' ログアウト', destroy_customer_session_path, method: :delete,class: 'text-light'  %></li>
        <% elsif admin_signed_in? %>
        <!-- adminログイン時 -->
          <%= render 'layouts/admin_header' %>
        <% else %>
        <!-- 非ログイン時 -->
          <%= render 'layouts/nologin_header' %>
        <% end %>
        </ul>
      </nav>

    </div>
  </nav>
</header>