<% if @product.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p class="genre-title">商品新規登録</p>

<%= form_with model: @product,:url => {:controller => :products, :action => :create}, local: true do |f| %>
<div class='col-md-8 offset-md-1'>
  <table class='table table-hover table-inverse'>
    <tbody>
      <tr>
        <td>商品画像</td>
        <td><%= f.attachment_field :image %></td>
      </tr>
      <tr>
        <td>商品名</td>
        <td><%= f.text_field :name,size: "40" %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= f.text_area :introduction,size: "45x5" %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= f.collection_select :genre_id, Genre.all, :id, :name %></td>
      </tr>
      <tr>
        <td>税抜価格</td>
        <td><%= f.text_field :price,size: "40" %>円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
           <%= f.radio_button :sales_status, '0', checked: true %>
           <%= f.label :sales_status, "販売中", value:  0 %>
           <%= f.radio_button :sales_status, '1' %>
           <%= f.label :sales_status, "販売停止中", value:  1 %>
        </td>
      </tr>
      <tr>
        <td><%= f.submit '新規登録',class: 'btn btn-success' %></td>
      </tr>
    </tbody>
  </table>
</div>
<% end %>


