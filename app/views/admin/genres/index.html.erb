<div style= "margin: 30px 0 30px 90px">
  <p class="genre-title">ジャンル一覧・追加</p>
</div>


<%= form_with model: @genre,:url => {:action => :create}, local: true do |f| %>
<div style= "margin: 30px 0 30px 180px">
  <div class="form-content">
    <p>ジャンル名</p>
    <div class="form-group">
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
     <%= f.submit '新規登録',class: 'btn btn-success' %>
    </div>
  </div>
</div>
<% end %>

<!--ジャンル作成したら表示される部分-->
<div class='col-md-4 offset-md-1'>
  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", "/admin/genres/#{genre.id}/edit",class: 'btn btn-success' %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>