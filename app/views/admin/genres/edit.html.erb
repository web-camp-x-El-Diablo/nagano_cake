<% if @genre.errors.any? %>
  <div class="alert alert-warning">
    <ul>
      <% @genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div style= "margin: 30px 0 30px 90px">
  <p class="genre-title">ジャンル一覧・追加</p>
</div>

<%= form_with model: @genre,:url => {:action => :update}, local: true do |f| %>
<div style= "margin: 30px 0 30px 180px">
  <div class="form-content">
    <p>ジャンル名</p>
    <div class="form-group">
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
     <%= f.submit '変更を保存',class: 'btn btn-success' %>
    </div>
  </div>
</div>
<% end %>