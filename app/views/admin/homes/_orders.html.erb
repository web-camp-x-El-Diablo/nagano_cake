<table class='table table-hover table-inverse'>
  <thead class="table-list">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% orders.each do |order| %>
      <tr>
        <td>
          <%= order.created_at %>
        </td>
        <td>
          <%= order.customer.name %>
        </td>
        <td>
          <%= @order_details.amount %>
        </td>
        <td>
          <%= order_status_i18n %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>